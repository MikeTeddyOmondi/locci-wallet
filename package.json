    "@tanstack/react-query": "5.18.1",
    "@tanstack/react-table": "^8.19.2",
    "@types/bcryptjs": "^2.4.6",
    "@vercel/analytics": "^1.3.1",
    "bcryptjs": "^2.4.3",
    "chart.js": "^4.4.3",
    "dayjs": "^1.11.11",
    "drizzle-orm": "^0.38.2",
    "intasend-node": "^1.1.2",
    "jsonwebtoken": "^9.0.2",
    "ky": "^1.4.0",
    "mantine-react-table": "2.0.0-alpha.5",
    "nanoid": "^5.0.9",
    "next": "14.1.0",
    "next-auth": "^5.0.0-beta.25",
